{
  "name": "mummy-ik-sons-provision-store",
  "version": "1.0.0",
  "description": "Production-ready e-commerce platform for Mummy IK & Sons Provision Store",
  "main": "src/index.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:server dev:watch",
    "dev:server": "http-server . -p 3000 -c-1",
    "dev:watch": "nodemon --watch src --watch css --ext js,css,html --exec \"npm run build\"",
    "build": "npm-run-all build:css build:js",
    "build:css": "postcss css/styles.css -o dist/styles.css",
    "build:js": "webpack --mode development",
    "build:prod": "npm-run-all build:css:prod build:js:prod",
    "build:css:prod": "postcss css/styles.css -o dist/styles.min.css --env production",
    "build:js:prod": "webpack --mode production",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,css,html}\"",
    "validate": "npm-run-all lint test",
    "start": "http-server . -p 3000",
    "deploy": "npm run build:prod && gh-pages -d ."
  },
  "keywords": [
    "ecommerce",
    "provision-store",
    "nigeria",
    "grocery",
    "shopping",
    "pwa"
  ],
  "author": "Mummy IK & Sons Provision Store",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "autoprefixer": "^10.4.16",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "cssnano": "^6.0.1",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "gh-pages": "^6.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "prettier": "^3.0.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "localforage": "^1.10.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/vendors/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}